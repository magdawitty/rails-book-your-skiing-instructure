

<%= content_for :title, @lesson.destination %>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @lesson.experience_level %> lesson at <%= @lesson.destination %></h1>

        <%= image_tag("card-background/#{@lesson.picture}", height: '300', width: '600')
          %>
          <h3>Your instructor <%= @lesson.user.name %> is looking forward to a day of skiing with you</h3>

        <%= image_tag("instructors/#{@lesson.user.avatar}", height: '200', width: '200')
          %>

          <p > <%= @lesson.user.description %></p>
    </div>
  </div>
</div>
