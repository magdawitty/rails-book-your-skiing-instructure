<div class="banner">


  <div class="banner-content">

    <h1>Book your skiing lesson online</h1>
    <div class="container" >
      <div class="row ">

          <%= simple_form_for @lesson do |f| %>
          <div class="search-form">
            <div class="col-sm-5">
            <%= f.input :destination, placeholder: "where?",  label: false,  wrapper_html: {class: "field-input" }%>
      <%#= f.input :date %>
            </div>
            <div class="col-sm-5">
            <%= f.input :experience_level, placeholder: "when?", label: false, wrapper_html: {class: "field-input" }  %>
            </div>
            <div class="col-sm-2 ">
            <%= f.submit :search, :class=>"btn-banner" , label: false %>
            </div>
            </div>
          <%end%>

        </div>
      </div>

    </div>


  </div>
</div>

